  --working-directory=$HOME/cloud/gdrive/notes -e ~/.scripts/tmux-sesh notes

# Window Modifications
for_window [class=".*"] border pixel 1
set $scratchpad_action floating enable, move scratchpad, scratchpad show
for_window [title="^.*pad$"] $scratchpad_action $halfscreen
for_window [title="^.*pad_full$"] $scratchpad_action, $fullscreen
# toggle between scratchpad view
bindsym $mod+Tab scratchpad show

# move a window into the scratchpad
bindsym $mod+Shift+Tab move scratchpad

# kill focused window
bindsym $mod+Shift+q kill

# lock without terminating i3 sesh
bindsym $mod+z exec dm-tool lock

# start dmenu (a program launcher)
bindsym $mod+d exec rofi -show drun -show-icons
bindsym $mod+Shift+d exec rofi -show combi -show-icons

# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
