set $darkgray #0b0f0c

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    status_command i3status
    # workspace_buttons yes
    position top
    font pango:JetBrainsMono NF 11
    separator_symbol "<|"
      colors {
        # # bar background color
        background $darkgray
        # text color used for blocks that do not have a color specified.
        statusline $aqua

        # workspaces section
        #                    border  backgr. text
        focused_workspace    $purple $purple $bg
        inactive_workspace   $darkgray $darkgray $purple
        active_workspace     $darkgray $darkgray $purple
        urgent_workspace     $red $red $bg
    }
}

# class                 border|backgr|text|indicator|child_border
client.focused          $blue $blue $white $red $purple
client.focused_inactive $darkgray $darkgray $yellow $red $darkgray
client.unfocused        $darkgray $darkgray $yellow $red $darkgray
client.urgent           $red $red $white $red $red

