# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  status_command i3status
  # workspace_buttons yes
  position bottom
  font pango:JetBrainsMono NF 12
  separator_symbol "|"
    colors {
      background $bg
      statusline $text
      separator $grey

      #                    border  backgr. text
      focused_workspace    $border $border $bg
      inactive_workspace   $bg $bg $border
      active_workspace     $bg $bg $border
      urgent_workspace     $red $red $bg
  }
}

# class                 border|backgr|text|indicator|child_border
client.focused          $blue $blue $white $red $border
client.focused_inactive $bg $bg $yellow $red $bg
client.unfocused        $bg $bg $yellow $red $bg
client.urgent           $red $red $white $red $red

