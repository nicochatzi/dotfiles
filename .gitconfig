[alias]
  co = checkout
  s = status -s
  ss = status
  a = add -p
  cm = commit -m
  ca = commit --amend
  cl = clone --recursive
  f = fetch --all
  l = log --decorate --graph --all --oneline
  ll = log --decorate --graph --all
  fix = !git reset --soft HEAD~0 && git commit --amend
[init]
  defaultBranch = main
[core]
  editor = vim
  pager = delta --line-numbers -- $(xctl theme)
  excludesfile = ~/.gitignore_global
[interactive]
  diffFilter = delta --color-only --line-numbers -- $(xctl theme)
[fetch]
  prune = true
[pull]
  rebase = true
[user]
  name = nicochatzi
  email = nico@htz.dev
[includeIf "gitdir:~/code/snc/"]
  path = .gitconfig_snc

