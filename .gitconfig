[alias]
    co = checkout
    s = status
    a = add -p
    cm = commit -m
    ca = commit --amend
    f = fetch --all
    l = log --decorate --graph --all --oneline
    ll = log --decorate --graph --all
    fix = !git reset --soft HEAD~0 && git commit --amend
[user]
    name = Nico Chatzi
    email = nico.chatzigianis@focusrite.com
[init]
    defaultBranch = main
[core]
    editor = nvim
    pager = delta --line-numbers --dark
[interactive]
    diffFilter = delta --color-only --line-numbers --dark
[fetch]
    prune = true
