[alias]
  co = checkout
  s = status -s
  ss = status
  a = add -p
  cm = commit -m
  ca = commit --amend
  cl = clone --recursive
  f = fetch --all
  l = log --decorate --graph --all --oneline
  ll = log --decorate --graph --all
  fix = !git reset --soft HEAD~0 && git commit --amend
[user]
  name = nicochatzi
  email = nico@htz.dev
[init]
  defaultBranch = main
[core]
  editor = vim
  pager = delta --line-numbers
  excludesfile = ~/.gitignore_global
[interactive]
  diffFilter = delta --color-only --line-numbers
[fetch]
  prune = true
[pull]
  rebase = true
[credential]
  helper = store
[url "ssh://git@github.com/"]
  insteadOf = https://github.com/
[url "ssh://git@gitlab.com/"]
  insteadOf = https://gitlab.com/
[url "ssh://git@bitbucket.org/"]
  insteadOf = https://bitbucket.org/
