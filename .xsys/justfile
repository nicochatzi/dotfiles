help:
  just --list --unsorted

build:
  cargo build --release
alias b := build

install:
  mkdir -p ~/.config/systemd/user
  cp res/xsys.feeds.service ~/.config/systemd/user/xsys.feeds.service
  systemctl --user daemon-reload
  systemctl --user enable xsys.feeds.service
alias i := install

dev:
  cargo watch -cx lbuild
alias d := dev

run CMD:
  cargo run -- {{CMD}}
alias r := run
